include ../partials/logo
include ../partials/menu-mobile
include ../partials/select/select-lang-big

mixin header(light = false)
  +menu-mobile
  header.header(class=light ? 'header_light' : '')
    .container.header__container
      +select-lang-big(light, true)
      if light
        +logo('header__logo', 'logo-black')
      else
        +logo('header__logo', 'logo-white')
      nav.header__nav
        .header__nav-list 
          a.header__nav-link(href="./tariffs.html") Tariffs
          a.header__nav-link(href="./about.html") Ãœber uns
          a.header__nav-link(href="./services.html") Leistungen
          a.header__nav-link(href="./career.html") Karriere
          a.header__nav-link(href="./sustainability.html") Nachhaltigkeit
          a.header__nav-link(href="./contact.html") Kontakt
      .header__contact
        a.btn.header__contact-tel(href="#") Call us
        button.btn.btn_white(type="button" data-popup-open="form") Angebot Anfordern
        +select-lang-big(light, false)
      .header__bar
        a.header__bar-tel(href="#")
          svg.header__bar-tel-icon
            use(xlink:href="./assets/sprite.svg#phone")
        button.header__burger
          span.header__burger-item
          span.header__burger-item
          span.header__burger-item