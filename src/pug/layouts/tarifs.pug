include ../modules/tarif-card
include ../modules/tarif-offer

mixin tarifs
  section.tarifs
    .container.tarifs__container
      .tarifs__top
        h2.tarifs__title Unsere Tarife
        .tarifs__btns
          button.btn.btn_big.btn_yellow(type="button") Tarifrechner
          button.btn.btn_big.btn_white(type="button") Learn more
      ul.tarifs__list
        -
          const list = [
            {
              title: 'S',
              price: 'ab 600€',
              desc: 'monatlich',
              benefits: [
              {isActive: false, content: 'Set-Up IT (299€)'},
              {isActive: false, content: 'Provision/Initial stocking (299€)'},
              {isActive: true, content: 'Up to 5 working hours'},
              {isActive: true, content: '200 picks'},
              {isActive: true, content: '50 packs'},
              {isActive: true, content: 'Up to 25 shleves included'},
              {isActive: true, content: 'Up to 5 pallet spaces included'},
              ],
            },
            {
              title: 'M',
              price: 'ab 1500€',
              desc: 'monatlich',
              benefits: [
              {isActive: false, content: 'Set-Up IT (299€)'},
              {isActive: false, content: 'Provision/Initial stocking (299€)'},
              {isActive: true, content: 'Up to 10 working hours'},
              {isActive: true, content: '500 picks'},
              {isActive: true, content: '100 packs'},
              {isActive: true, content: 'Up to 50 shleves included'},
              {isActive: true, content: 'Up to 10 pallet spaces  included'},
              ],
            },
            {
              title: 'L',
              price: 'ab 2500€',
              desc: 'monatlich',
              benefits: [
              {isActive: true, content: 'Set-Up IT'},
              {isActive: true, content: 'Provision/Initial stocking'},
              {isActive: true, content: 'Up to 30 working hours'},
              {isActive: true, content: '1200 picks'},
              {isActive: true, content: '240 packs'},
              {isActive: true, content: 'Up to 100 shleves included'},
              {isActive: true, content: 'Up to 20 pallet spaces  included'},
