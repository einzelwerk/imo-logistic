            {
              title: 'XL',
              price: 'ab 5000€',
              desc: 'monatlich',
              benefits: [
              {isActive: true, content: 'Set-Up IT'},
              {isActive: true, content: 'Provision/Initial stocking'},
              {isActive: true, content: 'Up to 80 working hours'},
              {isActive: true, content: '2500 picks'},
              {isActive: true, content: '500 packs'},
              {isActive: true, content: 'Up to 200 shleves included'},
              {isActive: true, content: 'Up to 50 pallet spaces  included'},
